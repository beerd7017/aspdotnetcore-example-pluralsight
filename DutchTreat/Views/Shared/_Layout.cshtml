<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>DutchTreat : @ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header class="container">
        <nav class="navbar navbar-dark bg-dark navbar-expand-md">
            <h1 class="navbar-brand">Welcome to Dutch Treat</h1>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#theMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="theMenu" class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="navbar-link" asp-controller="App" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="navbar-link" asp-controller="App" asp-action="Contact">Contact</a></li>
                    <li class="nav-item"><a class="navbar-link" asp-controller="App" asp-action="About">About</a></li>
                </ul>
            </div>
        </nav>
    </header>
<section class="container">
        <h2>@ViewBag.Title</h2>
        @RenderBody()
    </section>
    <div class ="text-center"><footer>Copyright 2018 Dutch Treat LLc</footer></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/index.js"></script>
    @RenderSection("scripts", false)
</body>
</html>